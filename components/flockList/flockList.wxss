/* components/flockList/flockList.wxss */

.flocklist.active {
  padding-top: 64rpx;
  position: relative;
}

.select-cont {
  background: #fff;
  padding:0 32rpx;
  position: absolute;
  width: 100%;
  padding-bottom: 0;
  top: 0;
}

.select-cont .select-info {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  align-items: center;
  padding-bottom: 17rpx;
}

.select-cont .select-info .select-item {
  display: flex;
  flex-direction:row;
  justify-content: center;
  align-items: center;
  flex: 1;
}

.select-cont .select-info .select-item.active .text {
  font-size: 40rpx;
  color: #4284f7;
  font-weight: bold;
  position: relative;
}
