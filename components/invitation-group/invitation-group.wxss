/* components/invitation-group.wxss */

.container {
  width: 690rpx;
  height: 330rpx;
  background-color: #fff;
  display: flex;
  justify-content: flex-end;
  position: relative;
}

.content {
  width: 640rpx;
  height: 330rpx;
  border-left: 1rpx solid #ebebeb;
}

.group-cont {
  width: 620rpx;
  height: 290rpx;
  border-radius: 16rpx;
  box-shadow: 0px 2px 12.48px 0.52px rgba(0, 0, 0, 0.06);
  margin-top: 32rpx;
  margin-left: 20rpx;
  position: relative;
  z-index: 3333;
  padding-top: 32rpx;
}

.group-img {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 20rpx;
  left: -72rpx;
}

.group-top {
  width: 620rpx;
  padding-left: 50rpx;
  border-bottom: 1rpx solid #ebebeb;
  padding-bottom: 32rpx;
  padding-right: 20rpx;
}

.group-name {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 550;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.zhuli-info {
  font-size: 22rpx;
  color: #333;
  margin-bottom: 14rpx;
  display: flex;
}

.progress {
  border-radius: 10rpx;
  overflow: hidden;
  width: 100%;
}

.group-bottom {
  width: 620rpx;
  padding-left: 50rpx;
  padding-right: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 134rpx;
}

.remain-time {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 70rpx;
}

.date {
  font-size: 28rpx;
  color: #333;
}

.lastdate {
  font-size: 22rpx;
  font-family: "PingFangSC";
  color: rgb(153, 153, 153);
  margin-top: 16rpx;
}

.btn-list {
  width: 212rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  position: relative;
}

.btn-bg {
  width: 212rpx;
  height: 100rpx;
  position: absolute;
}

.btn-list button {
  width: 88rpx;
  height: 88rpx;
  padding: 0rpx;
  border: none;
  position: absolute;
  /* margin: 2rpx; */
}

.zhulibtn {
  top: 8rpx;
  left: 8rpx;
  z-index: 34;
  opacity: 0;
}

.invitatebtn {
  top: 0rpx;
  right: 0rpx;
  z-index: 34;
  opacity: 0;
}

button::after {
  border: none;
  padding: 0rpx;
}

.yizhuli {
  width: 88rpx;
  height: 88rpx;
  margin-top: 6rpx;
  margin-right: 12rpx;
  position: relative;
  z-index: 33;
  left: 7rpx;
}
