/* components/city/city.wxss */

.container {
  width: 100%;
  /* height: 100%; */
  position: absolute;
  background: rgba(0, 0, 0, 0.4);
  z-index: 3399999999999993;
  top: 100rpx;
  display: flex;
  justify-content: flex-end;
  overflow: hidden;
}

.content {
  width: 450rpx;
  /* height: 100%; */
  background-color: #fff;
  transform: translateX(450rpx);
}
.content-show{
transform: translateX(0rpx);
transition:all .4s;
}
.city-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  font-size: 30rpx;
  padding: 0 30rpx;
}
.city-item image{
   width: 30rpx;
  height: 21rpx;
}