/* components/carousel/carousel.wxss */
.swiper-container{
  position: relative;
  background: #fff;
  overflow: hidden;
}
.swiper{
  width: 686rpx;
	height: 260rpx;
  margin: auto;
  border-radius: 16rpx;
  overflow: hidden;
}
.img{
  width: 686rpx;
	height: 260rpx;
}

.showTs{
  width: 688rpx;
  margin:16rpx auto;
  margin-bottom: 0;
  background: #fff;
	border-radius: 30rpx;
  display: flex;
  flex-wrap: nowrap;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  opacity: 1;
  transition: .5s; 
}
.showTs.none{
  opacity: 0;
  transform: translateY(-10px)
}
.showTs .left{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-right: 10rpx;
}
.showTs .left .head{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.showTs .left .text{
  font-size: 22rpx;
	color: #666666;
}
.showTs .icon{
  width: 34rpx;
	height: 17rpx;
}
.alert-cont{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 999999;
  background: rgba(0, 0, 0, .4);
  padding: 56rpx 75rpx;
}
.alert-cont .show-img{
  width: 100%;
  height: 1094rpx;
  background: #fff;
  border-radius: 16rpx;
  padding:68rpx 94rpx;
  position: relative;
}
.alert-cont .show-img .red-head{
  position: absolute;
  top: 40rpx;
  width: 410rpx;
  height: 51rpx;
}
.alert-cont .show-img .img{
  width: 100%;
  height: 810rpx;
}
.go-flock-btn{
  position: relative;
  width: 370rpx;
	height: 88rpx;
	background-color: #4284f7;
	border-radius: 44rpx;
  margin: auto;
  overflow: hidden;
  margin-top: 32rpx;
  margin-bottom: 16rpx;
}
.go-flock-btn .top-cont{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  line-height: 88rpx;
  font-size: 30rpx;
	color: #ffffff;
}
.go-flock-btn .top-cont .icon{
  width: 41rpx;
	height: 32rpx;
  vertical-align: middle;
  margin-right: 16rpx;
}
.go-flock-btn .top-cont .txt{
  vertical-align: middle;
}
.go-flock-btn .details_button{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
}
.alert-cont .show-img .text{
  text-align: center;
  display: block;
  font-size: 24rpx;
	color: #999999;
}
.search-num{
  padding: 0 32rpx;
  padding-bottom: 24rpx;
  font-size: 24rpx;
	color: #333333;
}