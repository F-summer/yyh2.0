.container {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  z-index: 34994;
   opacity: 1;
  transition: 1s; 
}

.contont {
  width: 100%;
  height: 466rpx;
  background-color: #f4f4f4;
  position: fixed;
  bottom: 0;
  left: 0;
  transform: translateY(470rpx);
  transition: all 0.4s;
  z-index: 4400004;
}

.contont-show {
  transform: translateY(0rpx);
  transition: all .4s;
  z-index: 4;
}

.list-item {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid #f4f4f4;
  text-align: center;
  font-size: 30pxr;
  color: #333;
  background-color: #fff;
}

.list-bottom {
  margin-top: 20rpx;
}
