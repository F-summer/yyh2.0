/* components/canvas/canvas.wxss */

.myCanvas {
  border: none;
  width: 622px;
  height: 760px;
}

.fixed-cont {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  z-index: 99999999;
}

.fixed-cont .botom-cont {
  position: absolute;
  width: 100%;
  height: 260rpx;
  padding: 40rpx 0;
  bottom: 0;
  left: 0;
  background: #fff;
}

.fixed-cont .botom-cont .text {
  font-size: 30rpx;
  color: #333;
  display: block;
  text-align: center;
}

.fixed-cont .botom-cont .choose-cont {
  display: flex;
  margin-top: 32rpx;
  align-items: center;
  flex-direction: row;
}

.fixed-cont .botom-cont .choose-cont .item {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}

.fixed-cont .botom-cont .choose-cont .item .icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 16rpx;
}

.fixed-cont .botom-cont .choose-cont .item .wz {
  font-size: 24rpx;
  color: #333;
}

.alt {
  position: absolute;
  width: 308rpx;
  height: 218rpx;
  background-color: #fff;
  top: 362rpx;
  left: 50%;
  margin-left: -154rpx;
  margin-top: -109rpx;
  padding-top: 32rpx;
}

.alt .text {
  display: block;
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

.alt .cont {
  margin: 32rpx 0;
}

.alt .cont .text {
  line-height: 36rpx;
}

button.item {
  border-color: transparent;
}
