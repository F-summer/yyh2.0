/* pages/successPage/successPage.wxss */

page {
  width: 100%;
  height: 100%;
  background-color: #b7cff1;
}

.container {
  width: 100%;
  height: 100%;
  background-color: #b7cff1;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-family: "PingFangSC";
  color: rgb(51, 51, 51);
}

.content {
  position: relative;
  z-index: 3;
}

.top {
  width: 750rpx;
  height: 375rpx;
}

.bottom {
  width: 750rpx;
  height: 656rpx;
  position: absolute;
  bottom: 0rpx;
}

.group-info {
  width: 690rpx;
  padding: 40rpx 34rpx 40rpx;
  background-color: #fff;
  margin-top: 40rpx;
  border-radius: 24rpx;
}

.success {
  width: 100rpx;
  height: 100rpx;
  margin-right: 24rpx;
}

.group {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.group-name {
  font-size: 30rpx;
  margin-bottom: 16rpx;
  margin-top: 14rpx;
  font-weight: 600;
}

.group-begin {
  display: flex;
}

.group-des {
  font-size: 24rpx;
  color: rgb(153, 153, 153);
}

.douhao {
  width: 52rpx;
  height: 52rpx;
}

.group-content {
  position: relative;
  z-index: 2;
  width: 690rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 0rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.zhulijilu {
  width: 100%;
  text-align: left;
  font-size: 30rpx;
  margin-bottom: 50rpx;
  padding-left: 30rpx;
  font-weight: 600;
}

.btn {
  width: 622rpx;
  height: 98rpx;
  margin-top: 30rpx;
}

.alert-cont {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.4);
  padding: 56rpx 75rpx;
}

.alert-cont .show-img {
  width: 100%;
  height: 1030rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 94rpx;
  position: relative;
}

.alert-cont .show-img .red-head {
  position: absolute;
  top: 40rpx;
  width: 410rpx;
  height: 51rpx;
}

.alert-cont .show-img .img {
  width: 100%;
  height: 810rpx;
}

.go-flock-btn {
  position: relative;
  width: 370rpx;
  height: 88rpx;
  background-color: #4284f7;
  border-radius: 44rpx;
  margin: auto;
  overflow: hidden;
  margin-top: 32rpx;
  margin-bottom: 16rpx;
}

.go-flock-btn .top-cont {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  line-height: 88rpx;
  font-size: 30rpx;
  color: #fff;
}

.go-flock-btn .top-cont .icon {
  width: 41rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 16rpx;
}

.go-flock-btn .top-cont .txt {
  vertical-align: middle;
}

.go-flock-btn .details_button {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
}

.alert-cont .show-img .text {
  text-align: center;
  display: block;
  font-size: 24rpx;
  color: #999;
}
