/* pages/invitate/invitate.wxss */

page {
  width: 100%;
  height: 100%;
}

.container {
  width: 100%;
  height: 100%;
  background-color: #b7cff1;
  display: flex;
  flex-direction: column;
  align-items: center;
  z-index: 0;
  font-family: "PingFangSC";
  color: rgb(51, 51, 51);
}

.bg {
  width: 248rpx;
  height: 406rpx;
  position: absolute;
  left: 0;
  z-index: 1;
}

.group-content {
  position: relative;
  z-index: 2;
  width: 690rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 0rpx;
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.top{
  margin-top: 66rpx;
}
.group-top {
  width: 690rpx;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.red {
  width: 12rpx;
  height: 50rpx;
}

.maohao {
  width: 52rpx;
  height: 52rpx;
  position: absolute;
  top: 50rpx;
  right: 24rpx;
}

.group_name {
  width: 100%;
  height: 90rpx;
  display: flex;
}

.userImg {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin: 0 20rpx;
}

.username-text {
  font-size: 28rpx;
  margin-bottom: 14rpx;
}

.text {
  font-size: 28rpx;
  font-weight: 600;
}

.group-info {
  width: 622rpx;
  height: 160rpx;
  background-color: #f8f8f8;
  border-radius: 16rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.status {
  width: 100rpx;
  height: 100rpx;
  margin: 32rpx;
}

.group-name {
  font-size: 30rpx;
}

.zhuliqingkuang {
  height: 84rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
}

.redfont {
  color: #ff5252;
}

.progress {
  border-radius: 10rpx;
  overflow: hidden;
  width: 622rpx;
  margin-bottom: 30rpx;
}

.btn-list {
  display: flex;
  justify-content: center;
}

.two {
  width: 300rpx;
  height: 100rpx;
}

.one {
  width: 620rpx;
  height: 98rpx;
}

.zhulijilu {
  width: 100%;
  text-align: left;
  font-size: 30rpx;
  margin-bottom: 50rpx;
  padding-left: 30rpx;
  font-weight: 600;
}

.date {
  font-size: 24rpx;
  font-family: "PingFangSC";
  color: #999;
  margin-top: 20rpx;
}

.alert-cont {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.4);
  padding: 56rpx 75rpx;
}

.alert-cont .show-img {
  width: 100%;
  height: 1030rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 94rpx;
  position: relative;
}

.alert-cont .show-img .red-head {
  position: absolute;
  top: 40rpx;
  width: 410rpx;
  height: 51rpx;
}

.alert-cont .show-img .img {
  width: 100%;
  height: 810rpx;
}

.go-flock-btn {
  position: relative;
  width: 370rpx;
  height: 88rpx;
  background-color: #4284f7;
  border-radius: 44rpx;
  margin: auto;
  overflow: hidden;
  margin-top: 32rpx;
  margin-bottom: 16rpx;
}

.go-flock-btn .top-cont {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  line-height: 88rpx;
  font-size: 30rpx;
  color: #fff;
}

.go-flock-btn .top-cont .icon {
  width: 41rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 16rpx;
}

.go-flock-btn .top-cont .txt {
  vertical-align: middle;
}

.go-flock-btn .details_button {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
}

.alert-cont .show-img .text {
  text-align: center;
  display: block;
  font-size: 24rpx;
  color: #999;
}
