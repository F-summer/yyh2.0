/* pages/group_desc/group_desc.wxss */

.container {
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.content {
  margin-top: 100rpx;
  width: 650rpx;
  padding-bottom: 40rpx;
  background-color: #fff;
  box-shadow: 4rpx 4rpx 14rpx 2rpx rgba(0, 0, 0, 0.12);
  border-radius: 32rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.topimg {
  width: 650rpx;
  height: 360rpx;
  border-radius: 32rpx 32rpx 0rpx 0rpx;
}

.groupimg {
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  left: 255rpx;
  top: 290rpx;
}

.group-name {
  font-size: 34rpx;
  font-weight: 550;
  text-align: center;
  margin-top: 110rpx;
}

.group-des {
  color: #999;
  font-size: 30rpx;
  line-height: 45rpx;
  margin-bottom: 260rpx;
  margin-top: 20rpx;
  padding: 0rpx 50rpx;
}

.injoy-group {
  width: 586rpx;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #ff5252;
  border-radius: 16rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}

.group-list {
  display: flex;
}

.btn {
  width: 281rpx;
  height: 72rpx;
  line-height: 72rpx;
  background-color: #4284f7;
  border-radius: 16rpx;
  margin-top: 24rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
}

.fenxiang {
  margin-left: 24rpx;
}

.alert-cont {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  background: rgba(0, 0, 0, 0.4);
  padding: 56rpx 75rpx;
}

.alert-cont .show-img {
  width: 100%;
  height: 1030rpx;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 94rpx;
  position: relative;
}

.alert-cont .show-img .red-head {
  position: absolute;
  top: 40rpx;
  width: 410rpx;
  height: 51rpx;
}

.alert-cont .show-img .img {
  width: 100%;
  height: 810rpx;
}

.go-flock-btn {
  position: relative;
  width: 370rpx;
  height: 88rpx;
  background-color: #4284f7;
  border-radius: 44rpx;
  margin: auto;
  overflow: hidden;
  margin-top: 32rpx;
  margin-bottom: 16rpx;
}

.go-flock-btn .top-cont {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
  line-height: 88rpx;
  font-size: 30rpx;
  color: #fff;
}

.go-flock-btn .top-cont .icon {
  width: 41rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 16rpx;
}

.go-flock-btn .top-cont .txt {
  vertical-align: middle;
}

.go-flock-btn .details_button {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
}

.alert-cont .show-img .text {
  text-align: center;
  display: block;
  font-size: 24rpx;
  color: #999;
}
