.zhezhao {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.4);
  position: fixed;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 33333;
}

.zhezhao-content {
  width: 600rpx;
  height: 900rpx;
  padding: 20rpx 0rpx;
  background-color: #fff;
  border-radius: 16rpx;
}

.scroll-item {
  font-size: 30rpx;
