/* pages/choiceFlock/choiceFlock.wxss */
page{
  height: 100%;
}
.content{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.choice-info{
  position: relative;
}
.choice-info.down{
  margin-top: 220rpx;
}
.choice-info .icon{
  position: absolute;
  width: 140rpx;
  height: 184rpx;
  bottom: 100rpx;
  left: 50%;
  margin-left: -70rpx;
}
.choice-info .text-cont{
  position: relative;
  width: 620rpx;
	height: 172rpx;
	background-color: #f8f8f8;
	border-radius: 16rpx;
  margin: auto;
  z-index: 99;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.choice-info .text-cont .title{
  font-weight: bold;
  display: block;
  text-align: center;
  font-size: 32rpx;
	color: #333333;
  margin:35rpx 0 16rpx 0;
}
.choice-info .text-cont .text{
  font-weight: bold;
  display: block;
  text-align: center;
  font-size: 28rpx;
	color: #999999;
  padding:0 48rpx;
  line-height: 34rpx;
}