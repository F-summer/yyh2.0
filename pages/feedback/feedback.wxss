/* pages/feedback/feedback.wxss */
page{
  background: #f4f4f4;
  padding-top: 24rpx;
}
.top{
  width:100%;
	height: 88rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
}
.top .left{
  font-size: 30rpx;
	color: #666666;
}
.top .right{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.top .right .text{
  font-size: 30rpx;
	color: #999999;
  margin-right: 25rpx;
  line-height: 88rpx
}
.top .right .icon{
  width: 17rpx;
  height: 32rpx;
}
.textarea-box{
  padding-top: 32rpx;
}
.textarea-box .title{
  padding-bottom: 16rpx;
  font-size: 30rpx;
	color: #333333;
  padding-left: 32rpx;
  font-weight: bold;
  display: block;
}
.textarea-box .title .ts{
  color: #4284f7;
  font-size: 26rpx;
  font-weight: normal;
}
.textarea-box .textarea-cont{
  background: #fff;
  padding: 32rpx;
}
.textarea-box .textarea-cont .textarea{
  display: block;
  margin: auto;
  width: 100%;
  font-size: 30rpx;
	color: #333;
}
.img-up-cont{
  background: #fff;
  padding: 32rpx;
}
.img-up-cont .text{
  font-size: 26rpx;
	color: #999999;
  margin-bottom: 24rpx
}
.img-up-cont .text .txt{
  color: #4284f7;
}
.img-up-cont .img-info{
 margin-right: -25px;
}
.img-up-cont .img-info .img-item{
  width: 154rpx;
	height: 154rpx;
  position: relative;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
  display: inline-block;
}
.img-up-cont .img-info .img-item .img{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.img-up-cont .img-info .img-item .img-add-btn{
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  opacity: 0;
}
.img-up-cont .img-info .img-item .del-btn{
  position: absolute;
  right: 0;
  top: 0;
  width: 40rpx;
  height: 40rpx;
}
.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  border-top: 1rpx  solid #ebebeb;
  background: #fff;
  height: 98rpx;
  padding:14rpx 32rpx;

}
.bottom .btn{
  width: 336rpx;
	height: 72rpx;
	border-radius: 16rpx;
  display: inline-block;
  font-size: 30rpx;
	color: #ffffff;
  text-align: center;
  line-height: 72rpx;
}
.bottom .btn.list-btn{
  background-color: #4284f7;
  float: left;
}
.bottom .btn.send-btn{
  background-color: #f4f4f4;
  color: #999999;
  float: right;
  position: relative;
}
.bottom .btn.send-btn.active{
  background-color: #ff5252;
  color: #ffffff;
}
.bottom .btn.send-btn .text{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 72rpx;
}
.details_button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.alt{
  position: fixed;
  z-index: 9999;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(0,0,0,.4);
  display: flex;
  align-items: center;
  justify-content: center;
}
.alt .alt-info{
  width: 586rpx;
	border-radius: 16rpx;
  background: #fff;
  text-align: center;
}
.alt .alt-info .tit{
  font-size: 34rpx;  
	color: #333333;
  font-weight: bold;
  line-height: 88rpx;
}
.alt .alt-info .alt-item{
  font-size: 30rpx;
	color: #333333;
  border-top: 1rpx solid #ebebeb;
  line-height: 88rpx;
}
